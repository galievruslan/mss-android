<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_fragment_tab_general"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/label_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_order_date"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/order_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/example_date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/label_order_shipping_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_order_shipping_date"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/order_shipping_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/example_date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/label_order_shipping_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_order_shipping_time"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/order_shipping_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/example_time"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/label_order_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_order_customer"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/order_customer_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/example_name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/label_order_shipping_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_order_shipping_address"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/order_shipping_address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/example_address"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/label_order_price_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_order_price_list"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/order_price_list_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/example_price_list"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/label_order_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_order_warehouse"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/order_warehouse_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/example_warehouse"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

    </ScrollView>