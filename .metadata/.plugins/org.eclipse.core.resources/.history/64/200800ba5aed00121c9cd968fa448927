package com.mss.application;

import java.util.Date;

import android.os.Bundle;
import android.app.Activity;
import android.app.ListActivity;
import android.view.Menu;
import android.widget.EditText;

public class RouteActivity extends ListActivity  {

	private EditText mRouteDateView;
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		
		mRouteDateView = (EditText)findViewById(R.id.routeDate);
		mRouteDateView.setText(new Date().toString());
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.activity_route, menu);
		return true;
	}

}
