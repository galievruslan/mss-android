package com.mss.application;

import com.j256.ormlite.android.apptools.OpenHelperManager;
import com.mss.domain.models.RoutePoint;
import com.mss.domain.services.RouteService;
import com.mss.infrastructure.ormlite.DatabaseHelper;

import android.content.Context;
import android.support.v4.content.AsyncTaskLoader;

public class RoutePointLoader extends AsyncTaskLoader<RoutePoint> {

	private final long mId;
	private RoutePoint mRoutePoint;
	private final DatabaseHelper mHelper;
	private final RouteService mRouteService;

	public RoutePointLoader(Context ctx, long id) {
		super(ctx);

		mId = id;

		mHelper = OpenHelperManager.getHelper(ctx, DatabaseHelper.class);
		mRouteService = new RouteService(mHelper);
	}

	@Override
	public RoutePoint loadInBackground() {
		mRoutePoint = mRouteService.getPointById(mId);

		return mNote;
	}

	@Override
	public void deliverResult(Note data) {
		if (isReset()) {
			return;
		}

		if (isStarted()) {
			super.deliverResult(data);
		}
	}

	@Override
	protected void onStartLoading() {
		if (mNote != null) {
			deliverResult(mNote);
		}

		if (takeContentChanged() || mNote == null) {
			forceLoad();
		}
	}

	@Override
	protected void onStopLoading() {
		cancelLoad();
	}

	@Override
	protected void onReset() {
		super.onReset();
	}

	@Override
	public void onCanceled(Note data) {
		super.onCanceled(data);
	}
}
